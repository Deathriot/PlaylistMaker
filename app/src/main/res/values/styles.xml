<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/normal_button_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_padding</item>
        <item name="android:layout_marginEnd">@dimen/normal_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/normal_padding</item>

        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>


        <item name="cornerRadius">@dimen/normal_button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@color/white</item>

        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Settings_button_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="iconGravity">end</item>
        <item name="android:paddingHorizontal">@dimen/normal_padding</item>
        <item name="android:paddingVertical">@dimen/settings_vertical_button_padding</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="iconTint">@color/gray</item>
        <item name="backgroundTint">?attr/colorSecondary</item>

        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/minor_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="Settings_switch_style" parent="Regular_text_style">
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/light_gray</item>
    </style>

    <style name="Search_edit_text_style" parent="Regular_text_style">
        <item name="drawableTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Search_functional_button" parent="Func_button_text_style">
        <item name="cornerRadius">@dimen/button_radius_54</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Func_button_text_style">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Medium_text_style">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Search_placeholder_text_style">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Regular_text_style">
        <item name="android:textSize">@dimen/minor_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Mini_regular_text_style">
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Audio_player_track_info_text_style">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Text_clear_search">
        <item name="backgroundTint">@color/gray</item>
    </style>
</resources>