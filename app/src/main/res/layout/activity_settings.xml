<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start"
            android:src="@drawable/arrow_back_24x24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:text="Настройки"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/normal_padding">

        <androidx.appcompat.widget.SwitchCompat
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:buttonTintMode="src_in"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:text="@string/dark_theme"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/minor_text_size"
            app:cornerRadius="0dp"
            app:iconTint="@color/black" />


        <com.google.android.material.button.MaterialButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:text="@string/share_app"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/minor_text_size"
            app:cornerRadius="0dp"
            app:icon="@drawable/share"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:text="@string/contact_support"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/minor_text_size"
            app:cornerRadius="0dp"
            app:icon="@drawable/support"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:text="@string/user_agreement"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/minor_text_size"
            app:cornerRadius="0dp"
            app:icon="@drawable/mini_arrow"
            app:iconGravity="end"
            app:iconTint="@color/black" />
        <!-- Непонятно как сделать без лишнего layout,
         чтобы кнопки занимали лишь часть экрана-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>
</LinearLayout>