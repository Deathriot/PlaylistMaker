<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorSecondary">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/fav_tracks_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="fav_tracks_placeholder_text, fav_tracks_placeholder_image" />

    <ImageView
        android:id="@+id/fav_tracks_placeholder_image"

        android:layout_width="120dp"
        android:layout_height="120dp"

        android:src="@drawable/no_tracks_found_placeholder"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/fav_tracks_placeholder_text"

        style="@style/Search_placeholder_text_style"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_padding"

        android:text="@string/media_is_empty"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSecondary"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fav_tracks_placeholder_image" />


</androidx.constraintlayout.widget.ConstraintLayout>